<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marcoslopez7.proyectofinal.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre_Usuario"
        android:id="@+id/tv_username"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:text="Search"
            android:id="@+id/b_search"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:id="@+id/et_buscar"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:text="Search "
            android:id="@+id/b_search_2"
            android:layout_row="2"
            android:layout_column="0" />

        <Spinner
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:id="@+id/s_category"
            android:spinnerMode="dropdown"
            android:layout_row="2"
            android:layout_column="2"
            ></Spinner>

        <Button
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:text="Sell"
            android:id="@+id/b_sell"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:text="View Profile"
            android:id="@+id/b_profile"
            android:layout_row="3"
            android:layout_column="2" />+
        <Button
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:text="New Category"
            android:id="@+id/b_category"
            android:layout_column="0"
            android:layout_row="4"
            android:visibility="invisible"
            android:clickable="false"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:text="Validate"
            android:id="@+id/b_validate"
            android:layout_column="2"
            android:layout_row="4"
            android:visibility="invisible"
            android:clickable="false"/>
    </GridLayout>

</RelativeLayout>
